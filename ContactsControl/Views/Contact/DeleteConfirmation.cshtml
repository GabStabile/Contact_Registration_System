@model ContactsModel
@{
	ViewData["Title"] = "Delete contact";
}

<div class="text-center">
	<h3>Do you want to delete this contact (@Model.Name)?</h3>
	<br />

	<!-- Button 'Confirm deletion'-->
	<a class="btn btn-danger" asp-controller="Contact" asp-action="Delete" asp-route-id="@Model.Id" role="button">
		Confirm deletion
	</a>
	<!-- Button 'Back the page'-->
	<a class="btn btn-secondary" asp-controller="Contact"  asp-action="Index" role="button">
		Cancel deletion
	</a>
</div>