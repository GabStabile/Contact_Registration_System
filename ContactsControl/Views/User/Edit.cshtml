@using ContactsControl.Enums 
@model UsersModel
@{
	ViewData["Title"] = "Edit Users";
}

<div class="text-center">
    <h1 class="display-4">Edit user</h1>
</div>

<form asp-controller="User" asp-action="Edit" method="post" >

    <input type="hidden" asp-for="Id"/>

    <div class="form-group custom-form-group">
        <label for="name">Name</label>
        <input type="text" asp-for=Name class="form-control" placeholder="Enter contact name">
        @Html.ValidationMessageFor(x => x.Name)
    </div>

    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="text" asp-for=Email class="form-control" placeholder="Enter contact e-mail">
        @Html.ValidationMessageFor(x => x.Email)

    </div>

    <div class="form-group">
        <label for="login">Login</label>
        <input type="text" asp-for=Login class="form-control" placeholder="Enter user profile (name, e-mail or numeration)">
        @Html.ValidationMessageFor(x => x.Login)

    </div>

    <div class="form-group">
        <label for="profile">Profile</label>
        <select asp-for="Profile" class="form-control">
            <option value="">Select</option>
            <option value="@EnumProfile.Admin">Admin</option>
            <option value="@EnumProfile.Default">Default</option>
        </select>
        @Html.ValidationMessageFor(x => x.Profile)
    </div>

    <button type="submit" class="btn btn-primary">
        Edit
        </button>

    <a class="btn btn-secondary" asp-controller="User" asp-action="Index" role="button">
        Back to page
    </a>
</form>