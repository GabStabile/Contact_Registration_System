@using ContactsControl.Enums
@model UsersModel
@{
	<!-- Title of page -->
	ViewData["Title"] = "Create Users";
}
<div class="text-center">
	<h3 class="display-4">Create user</h3>
</div>

<form asp-asp-controller="User" asp-action="Create" method="post">

	<div class="form-group">
		<label for="name">Name</label>
		<input type="text" asp-for=Name class="form-control" placeholder="Enter user name">
		@Html.ValidationMessageFor(x => x.Name)
	</div>

	<div class="form-group">
		<label for="email">E-mail</label>
		<input type="text" asp-for=Email class="form-control" placeholder="Enter user e-mail">
		@Html.ValidationMessageFor(x => x.Email)
	</div>

	<div class="form-group">
		<label for="login">Login</label>
		<input type="text" asp-for=Login class="form-control" placeholder="Enter user login">
		@Html.ValidationMessageFor(x => x.Login)
	</div>

	<div class="form-group">
		<label for="profile">Profile</label>
		<select asp-for="Profile" class="form-control">
			<option value="">Select</option>
			<option value="@EnumProfile.Admin">Admin</option>
			<option value="@EnumProfile.Default">Default</option>
		</select>
		@Html.ValidationMessageFor(x => x.Profile)
	</div>

	<div class="form-group">
		<label for="password">Password</label>
		<input type="password" asp-for=Password class="form-control" placeholder="Enter user password">
		@Html.ValidationMessageFor(x => x.Password)
	</div>

	<button type="submit" class="btn btn-primary">
		Add
	</button>

	<a class="btn btn-secondary" asp-controller="User" asp-action="Index">
		Back to page
	</a>

</form>
