@model UsersModel
@{
	ViewData["Title"] = "Delete Users";
}

<div class="text-center">
	<h3>Do you want to delete this user (@Model.Name)?</h3>
	
	<!-- Button 'Confirm deletion'-->
	<a class="btn btn-danger" asp-controller="User" asp-action="Delete" asp-route-id="@Model.Id" role="button">
		Confirm deletion
	</a>
	<!-- Button 'Back the page'-->
	<a class="btn btn-secondary" asp-controller="User"  asp-action="Index" role="button">
		Cancel deletion
	</a>
</div> 